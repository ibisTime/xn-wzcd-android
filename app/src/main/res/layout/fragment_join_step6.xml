            <com.cdkj.wzcd.view.MyImageLayout
                android:id="@+id/myMi_ghIdPic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSingle="false"
                app:txt_image_hint="共还人身份证(正)"
                app:txt_image_hint_right="共还人身份证(反)"
                app:txt_image_title="共还人身份证" />

            <com.cdkj.wzcd.view.MyMultipleLayout
                android:id="@+id/myMl_ghHkb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="共还人户口本" />

        </LinearLayout>

    </ScrollView>
</layout>
