<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.cdkj.wzcd.view.MyNormalLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="客户姓名">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="业务编号">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="购车途径">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MySelectLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_select_title="*贷款产品">

            </com.cdkj.wzcd.view.MySelectLayout>

            <com.cdkj.wzcd.view.MySelectLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_select_title="*是否垫资">

            </com.cdkj.wzcd.view.MySelectLayout>

            <!--拟购车辆信息-->
            <include layout="@layout/layout_join_apply_car_info_input" />

            <!--申请人信息-->
            <include layout="@layout/layout_join_apply_user_info_input" />

            <!--配偶信息-->
            <include layout="@layout/layout_join_apply_spouse_info_input" />

            <!--担保人信息-->
            <include layout="@layout/layout_join_apply_contact_info_input" />

            <com.cdkj.wzcd.view.MyTitleBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_title="流水数据" />

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.cdkj.wzcd.view.MyEditLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_input_hint="请输入流水开始日期"
                    app:txt_input_title="*流水开始日期" />

                <com.cdkj.wzcd.view.MyEditLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_input_hint="请输入流水开始日期"
                    app:txt_input_title="*流水结束日期" />

                <com.cdkj.wzcd.view.MyEditLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_input_hint="请输入收入"
                    app:txt_input_title="*收入" />

                <com.cdkj.wzcd.view.MyEditLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_input_hint="请输入支出"
                    app:txt_input_title="*支出" />

                <com.cdkj.wzcd.view.MyEditLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_input_hint="请输入账户余额"
                    app:txt_input_title="*账户余额" />

                <com.cdkj.wzcd.view.MyEditLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_input_hint="请输入月均收入"
                    app:txt_input_title="*月均收入" />

                <com.cdkj.wzcd.view.MyEditLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_input_hint="请输入月均支出"
                    app:txt_input_title="*月均支出" />

                <com.cdkj.wzcd.view.MyEditLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_input_hint="请输入备注"
                    app:txt_input_title="备注" />

            </LinearLayout>

            <com.cdkj.wzcd.view.MyTitleBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_title="其他材料" />

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.cdkj.wzcd.view.MyEditLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_input_title="购房合同（多）" />

                <com.cdkj.wzcd.view.MyEditLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_input_title="房屋照片（多）" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_my_confirm_btn"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_my_confirm_btn"
                    android:text="发送"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</layout>
