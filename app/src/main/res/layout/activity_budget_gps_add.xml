<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.cdkj.wzcd.view.MySelectLayout
                    android:id="@+id/mySl_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_select_title="GPS设备号">

                </com.cdkj.wzcd.view.MySelectLayout>


                <com.cdkj.wzcd.view.MySelectLayout
                    android:id="@+id/mySl_azLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_select_title="安装位置">

                </com.cdkj.wzcd.view.MySelectLayout>

                <com.cdkj.wzcd.view.MyEditLayout
                    android:id="@+id/myEl_azLocation"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_input_hint="请输入安装位置"
                    app:txt_input_title="安装位置">

                </com.cdkj.wzcd.view.MyEditLayout>

                <com.cdkj.wzcd.view.MyConfirmBtn
                    android:id="@+id/myCb_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_confirm_content="确定">


                </com.cdkj.wzcd.view.MyConfirmBtn>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</layout>
