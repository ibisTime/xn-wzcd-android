<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/layout_left_interval"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:textSize="16sp"
                android:textColor="@color/color_mySelectHorizontal_txt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_input"
                android:layout_marginLeft="@dimen/layout_left_interval"
                android:gravity="right|center_vertical"
                android:background="@null"
                android:textSize="16sp"
                android:singleLine="true"
                android:textColor="@color/color_myInputHorizontal_txt"
                android:textColorHint="@color/color_myInputHorizontal_hint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/ll_select"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_width="9dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:src="@drawable/more_right" />

            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/style_split_line_horizontal"/>

    </LinearLayout>

</layout>
