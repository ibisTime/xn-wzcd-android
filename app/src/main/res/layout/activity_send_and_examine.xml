<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.cdkj.wzcd.module.datatransfer.DataReceiveActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/myNl_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="客户姓名">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/myNl_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="业务编号">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/myNl_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="资料类型">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <View
                style="@style/style_split_line_horizontal_broad"/>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/myNl_node_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="发件节点">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/myNl_node_re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="发件节点">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <LinearLayout
                android:id="@+id/ll_refFile"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.cdkj.wzcd.view.MyNormalLayout
                    android:id="@+id/myNl_re_file_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_normal_title="参考材料清单">

                </com.cdkj.wzcd.view.MyNormalLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_refFile"
                    android:paddingBottom="10dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </android.support.v7.widget.RecyclerView>

                <View
                    style="@style/style_split_line_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sendFile"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.cdkj.wzcd.view.MyNormalLayout
                    android:id="@+id/myNl_send_file_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_normal_title="寄送材料清单">

                </com.cdkj.wzcd.view.MyNormalLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_sendFile"
                    android:paddingBottom="10dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </android.support.v7.widget.RecyclerView>

                <View
                    style="@style/style_split_line_horizontal"/>

            </LinearLayout>


            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/myNl_send_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="寄送方式">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <LinearLayout
                android:id="@+id/ll_logistics"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.cdkj.wzcd.view.MyNormalLayout
                    android:id="@+id/myNl_logistics_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_normal_title="快递公司">

                </com.cdkj.wzcd.view.MyNormalLayout>

                <com.cdkj.wzcd.view.MyNormalLayout
                    android:id="@+id/myNl_logistics_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:txt_normal_title="快递单号">

                </com.cdkj.wzcd.view.MyNormalLayout>

            </LinearLayout>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/myNl_send_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="发货时间">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/myNl_sendNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="发货说明">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <View
                style="@style/style_split_line_horizontal_broad"/>

            <com.cdkj.wzcd.view.MyNormalLayout
                app:txt_normal_title="补件原因"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_reason"
                    android:paddingTop="15dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_add_root"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:paddingLeft="@dimen/layout_left_interval"
                android:paddingRight="@dimen/layout_right_interval"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_add"
                    android:background="@drawable/common_my_image_bg"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="52dp">

                    <ImageView
                        android:src="@mipmap/add"
                        android:layout_width="25dp"
                        android:layout_height="25dp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_confirm"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:textColor="@color/white"
                    android:background="@drawable/common_my_confirm_btn"
                    android:text="补件"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp" />

                <Button
                    android:id="@+id/btn_confirm_center"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:textColor="@color/white"
                    android:background="@drawable/common_my_confirm_btn"
                    android:text="退件"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp" />

                <Button
                    android:id="@+id/btn_confirm_right"
                    android:textSize="16sp"
                    android:layout_marginLeft="@dimen/layout_left_interval"
                    android:layout_marginRight="@dimen/layout_right_interval"
                    android:textColor="@color/white"
                    android:background="@drawable/common_my_confirm_btn"
                    android:text="通过"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="45dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>
