<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="@dimen/layout_left_interval"
            android:paddingRight="@dimen/layout_right_interval"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:textSize="16sp"
                android:textColor="@color/color_mySelectHorizontal_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_content"
                android:textSize="16sp"
                android:gravity="right"
                android:textColor="@color/color_mySelectHorizontal_txt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_more"
                android:layout_marginLeft="@dimen/layout_left_interval"
                android:background="@mipmap/pulldown"
                android:layout_width="10dp"
                android:layout_height="7dp" />

        </LinearLayout>

        <View
            style="@style/style_split_line_horizontal"/>

    </LinearLayout>

</layout>
