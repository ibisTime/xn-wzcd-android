<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:text="紧急联系人1"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    />

                <com.cdkj.wzcd.custom.BaseEditLayout
                    android:id="@+id/el_emergencyName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="姓名"/>

                <com.cdkj.wzcd.custom.BaseSelectLayout
                    android:id="@+id/sl_emergencyRelation1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="与主贷人关系"/>

                <com.cdkj.wzcd.custom.BaseEditLayout
                    android:id="@+id/el_emergencyMobile1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:inputType="phone"
                    app:title="手机号"/>

                <View
                    style="@style/style_split_line_horizontal_broad"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:text="紧急联系人2"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    />

                <com.cdkj.wzcd.custom.BaseEditLayout
                    android:id="@+id/el_emergencyName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="姓名"/>

                <com.cdkj.wzcd.custom.BaseSelectLayout
                    android:id="@+id/sl_emergencyRelation2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="与主贷人关系"/>

                <com.cdkj.wzcd.custom.BaseEditLayout
                    android:id="@+id/el_emergencyMobile2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:inputType="phone"
                    app:title="手机号"/>

                <View
                    style="@style/style_split_line_horizontal_broad"/>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:background="@drawable/shape_btn_bg_std"
                android:text="保存"
                android:textColor="#ffffffff"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>
</layout>