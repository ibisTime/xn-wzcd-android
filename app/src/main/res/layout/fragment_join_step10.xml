<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.cdkj.wzcd.view.MyMultipleLayout
                android:id="@+id/myEl_otherFilePdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="附件" />

            <com.cdkj.wzcd.view.MyEditLayout
                android:id="@+id/myEl_otherApplyNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_input_hint="选填"
                app:txt_input_title="备注事项" />

            <com.cdkj.wzcd.view.MyConfirmBtn
                android:id="@+id/btn_confirm"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_confirm_content="保存">

            </com.cdkj.wzcd.view.MyConfirmBtn>

        </LinearLayout>

    </ScrollView>
</layout>
