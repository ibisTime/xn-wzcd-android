<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none"
        tools:context="com.cdkj.wzcd.module.work.cllh.CllhInputMessageActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/myNl_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="客户姓名">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/myNl_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="业务编号">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/myNl_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="贷款银行">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/myNl_loan_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_content="0.00"
                app:txt_normal_title="贷款金额">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <com.cdkj.wzcd.view.MyNormalLayout
                android:id="@+id/myNl_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:txt_normal_title="落户日期"
                app:txt_normal_hint="请选择落户日期"
                app:img_normal_right="@drawable/more_right">

            </com.cdkj.wzcd.view.MyNormalLayout>

            <!--<EditText-->
            <!--android:id="@+id/et_time"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_marginLeft="15dp"-->
            <!--android:layout_marginRight="15dp"-->
            <!--android:background="@null"-->
            <!--android:hint="落户日期"-->
            <!--android:paddingLeft="5dp"-->
            <!--android:paddingRight="5dp"-->
            <!--android:singleLine="true" />-->

            <com.cdkj.wzcd.view.MyImageLayout
                android:id="@+id/myIl_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSingle="true"
                app:txt_image_hint="发票"
                app:txt_image_title="发票">

            </com.cdkj.wzcd.view.MyImageLayout>

            <com.cdkj.wzcd.view.MyImageLayout
                android:id="@+id/myIl_qualified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSingle="true"
                app:txt_image_hint="合格证"
                app:txt_image_title="合格证">

            </com.cdkj.wzcd.view.MyImageLayout>

            <com.cdkj.wzcd.view.MyImageLayout
                android:id="@+id/myIl_jqx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSingle="true"
                app:txt_image_hint="交强险"
                app:txt_image_title="交强险"></com.cdkj.wzcd.view.MyImageLayout>

            <com.cdkj.wzcd.view.MyImageLayout
                android:id="@+id/myIl_syx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:isSingle="true"
                app:txt_image_hint="商业险"
                app:txt_image_title="商业险"></com.cdkj.wzcd.view.MyImageLayout>

            <com.cdkj.wzcd.view.MyConfirmBtn
                android:id="@+id/myCb_confirm"
                app:txt_confirm_content="保存"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.cdkj.wzcd.view.MyConfirmBtn>

