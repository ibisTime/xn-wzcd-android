<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.cdkj.wzcd.custom.BaseEditLayout
            android:id="@+id/el_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="任务名称" />

        <com.cdkj.wzcd.custom.BaseEditLayout
            android:id="@+id/el_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:inputType="number"
            app:title="任务时效（小时）" />

        <com.cdkj.wzcd.custom.BaseSelectLayout
            android:id="@+id/sl_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:field="sl_user"
            app:isOpenActivity="true"
            app:title="执行人" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:padding="15dp">

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_bg_std2"
                android:text="返回"
                android:textColor="#028EFF"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_apply"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_bg_std"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</layout>